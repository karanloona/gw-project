{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "api/micro-project": {
      "type": "library",
      "root": "libs/api/micro-project",
      "entryFile": "index",
      "sourceRoot": "libs/api/micro-project/src",
      "compilerOptions": {
        "tsConfigPath": "libs/api/micro-project/tsconfig.lib.json"
      }
    }
  }
}
